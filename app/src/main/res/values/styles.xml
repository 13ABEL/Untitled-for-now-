<resources>

    <!-- base app theme -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/deck_item_text</item>
    </style>

    <!-- main app theme -->
    <style name="AppTheme" parent="Base.AppTheme">
        <item name="android:textColor">@color/deck_item_text</item>
        <item name="android:textSize">@dimen/summary_text</item>
    </style>


    <style name="CardTheme" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <!-- for popup and menus -->
    <style name="MenuTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">

    </style>

</resources>
