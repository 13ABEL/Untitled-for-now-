<resources>

    <!-- base app theme -->
    <style name="Base.Apptheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/deck_item_text</item>
    </style>

    <!-- main app theme -->
    <style name="AppTheme" parent="Base.Apptheme">

        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textColor">@color/deck_item_text</item>

        <item name="android:textSize">@dimen/summary_text</item>
    </style>
    
    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/colorPrimary</item>
    </style>




    <style name="CardTheme" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>



</resources>
