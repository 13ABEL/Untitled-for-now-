<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginStart="@dimen/deck_item_margin"
    android:layout_marginTop="@dimen/deck_item_margin"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:theme="@style/DeckItemTheme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/deck_item_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingTop="@dimen/deck_item_padding_ver"
            android:paddingBottom="@dimen/deck_item_padding_hor"
            android:paddingStart="@dimen/deck_item_padding_ver"
            android:paddingEnd="@dimen/deck_item_padding_hor">

            <TextView
                android:id="@+id/deck_item_deckname"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"

                android:layout_width="match_parent"
                android:layout_height="@dimen/deck_item_name_height"

                android:text="zoolock"
                android:textAllCaps="true"
                android:textSize="@dimen/deck_item_title"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/deck_item_icon"

                android:layout_below="@id/deck_item_deckname"
                android:layout_width="@dimen/deck_item_icon"
                android:layout_height="@dimen/deck_item_icon"

                android:layout_marginRight="@dimen/deck_item_icon_margin"
                android:layout_marginTop="@dimen/deck_item_icon_margin"


                android:scaleType="fitXY"
                android:src="@drawable/placeholder"/>


            <TextView
                android:id="@+id/deck_item_author"

                android:layout_toRightOf="@id/deck_item_icon"
                android:layout_alignTop="@id/deck_item_icon"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/deck_created_time"

                android:layout_below="@id/deck_item_author"
                android:layout_toRightOf="@id/deck_item_icon"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/3/2018"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

